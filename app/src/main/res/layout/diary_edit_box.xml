<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/diary_see_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        app:srcCompat="@drawable/night_sky" />

    <EditText
        android:id="@+id/diary_box_settext"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:fontFamily="@font/nanumpen"
        android:gravity="top"
        android:inputType="textPersonName"
        android:text="Name"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <Button
            android:id="@+id/diary_see_backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="89dp"
            android:fontFamily="@font/nanumpen"
            android:text="돌아가기"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/diary_box_set_imagebtn" />

        <Button
            android:id="@+id/diary_box_set_imagebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="89dp"
            android:fontFamily="@font/nanumpen"
            android:text="사진 등록하기"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/diary_box_savebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/nanumpen"
            android:text="저장"
            app:layout_constraintEnd_toStartOf="@+id/diary_see_backbtn"
            app:layout_constraintTop_toBottomOf="@+id/diary_box_set_imagebtn" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/nanumpen"
            android:text="사진 촬영"
            app:layout_constraintBottom_toBottomOf="@+id/diary_box_set_imagebtn"
            app:layout_constraintStart_toEndOf="@+id/diary_box_set_imagebtn"
            app:layout_constraintTop_toTopOf="@+id/diary_box_set_imagebtn" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>